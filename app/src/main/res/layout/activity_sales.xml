<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#ECECFB"
    android:orientation="vertical"
    tools:context=".SalesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_topbar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Home"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:text=" ReUseMarket"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/archiveBtn"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"
            android:text="✉️"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/profileimg"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/options"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:layout_marginRight="120dp"
        android:background="@drawable/textview_options"
        android:gravity="center"
        android:text="Options ▼"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_margin="10dp"
        android:layout_weight="7"
        android:choiceMode="singleChoice"
        android:divider="#ECECFB"
        android:dividerHeight="10dp">


    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <android.widget.Button
            android:id="@+id/writeBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_plus"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorLink="#3F95BC"
            android:textSize="43sp" />

    </LinearLayout>
</LinearLayout>