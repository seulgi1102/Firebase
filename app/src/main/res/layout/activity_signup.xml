<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6FB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_topbar"
        android:padding="5dp"
        android:text="ï¸ŽReuseMarket"
        android:textColor="#F6F6FB"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="Fill out the form."
            android:textColor="#5E5E5E" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="124dp"
            android:layout_height="24dp"
            android:text="Email Address" />

        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="abc@naver.com"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="73dp"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:text="Password" />

        <EditText
            android:id="@+id/signUpPass"
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="abc1234!"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="73dp"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:text="Name" />

        <EditText
            android:id="@+id/signUpName"
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="20" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="73dp"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:text="Birth Date" />

        <EditText
            android:id="@+id/signUpBirth"
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="YYMMDD"
            android:inputType="text"
            android:maxLength="6" />

        <TextView
            android:id="@+id/signIn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/signUpBtn"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/button_login"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</LinearLayout>