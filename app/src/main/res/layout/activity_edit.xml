<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity"
    android:layout_weight="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_topbar"
        android:padding="5dp"
        android:text="Edit Page"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCED"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Revise the sales post"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#5E5E5E" />

        <TextView
            android:id="@+id/descTxt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="EditTitle:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="title"
            android:inputType="textMultiLine"
            android:maxLength="34"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECFB"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
                android:id="@+id/descTxt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="EditPrice:"
                android:textSize="24sp"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#ECECFB"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="0dp">

                <EditText
                    android:id="@+id/editPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="price"
                    android:padding="10dp"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/descTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  won"
                    android:textSize="34sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="58dp"
        android:background="#DCDCED"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="15dp">

        <RadioGroup
            android:id="@+id/editRadioG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/onSale"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="On sale" />

            <RadioButton
                android:id="@+id/soldOut"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sold out" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ECECFB"
        android:padding="10dp">

        <TextView
            android:id="@+id/descTxt6"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="EditDescription:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="description"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDCDDF"
        android:orientation="horizontal"
        android:padding="10dp">

        <android.widget.Button
            android:id="@+id/closeEditPage"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:background="@drawable/button_cancel"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:visibility="invisible" />

        <android.widget.Button
            android:id="@+id/editBtn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/button_edit"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
